extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block main
  .container.my-3
    .row
      .col-8.mx-auto
        +box-head(pageTitle)

        form(form-register)
          div(class="form-group")
            label(for="username") Họ và tên
            input(
              type="text"
              class="form-control"
              id="username"
              name="username"
              required
            )
          div(class="form-group")
            label(for="email") Email
            input(
              type="email"
              class="form-control"
              id="email"
              name="email"
              required
            )
          div(class="form-group")
            label(for="passwordHash") Mật khẩu
            input(
              type="password"
              class="form-control"
              id="passwordHash"
              name="passwordHash"
              required
            )
          div(class="form-group")
            button(
              type="submit"
              class="btn btn-primary btn-block"
            ) Đăng ký